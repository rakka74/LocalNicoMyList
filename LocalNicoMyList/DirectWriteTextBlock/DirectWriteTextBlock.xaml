<UserControl x:Class="DirectWriteTextBlockNS.DirectWriteTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DirectWriteTextBlockNS"
             xmlns:dx="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid x:Name="grid">
        <Image x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None">
            <Image.Source>
                <dx:D3D11Image x:Name="InteropImage" />
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
